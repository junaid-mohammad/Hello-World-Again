<%- include("partials/header"); -%>
<h1>Contact Me</h1>

    <form action="/contact" method="POST">
    <input name="name" type="text" class="feedback-input" placeholder="Name" required />
    <input name="email" type="email" class="feedback-input" placeholder="Email" required />
    <textarea name="text" class="feedback-input" placeholder="Comment" required></textarea>
    <button class="btn btn-primary" type="submit" name="button">Ping</button>
    </form>

    <!-- Display Thank You Message -->
    <% if (typeof thankYouMessage !== 'undefined') { %>
    <p class="thank-you-message"><%= thankYouMessage %></p>
    <% } %>

<%- include("partials/footer"); -%>